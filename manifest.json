{

  "manifest_version": 2,
  "name": "Download Links",
  "version": "1.0",

  "description": "Download files in a web page",

  "icons": {
    "48": "icons/pdf48.png",
    "96": "icons/pdf96.png"
  },

  "browser_action": {
    "default_icon": "icons/pdf48.png",
    "default_title": "Download Links",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "downloads.open"
  ]
}
